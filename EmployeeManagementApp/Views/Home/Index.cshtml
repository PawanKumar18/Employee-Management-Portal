@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    @if (User?.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">Employee Management</h3>
                        <div class="d-flex flex-column flex-md-row justify-content-center align-items-center">
                            <a class="btn btn-primary text-white m-2" asp-controller="Employees" asp-action="Create">
                                <i class="fas fa-user-plus mr-2"></i> Add Employee
                            </a>
                            <a class="btn btn-primary text-white m-2" asp-controller="Employees" asp-action="Index">
                                <i class="fas fa-edit mr-2"></i> Edit Employee
                            </a>
                            <a class="btn btn-primary text-white m-2" asp-controller="SalaryHistories" asp-action="Index">
                                <i class="fas fa-history mr-2"></i> Salary History
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Please log in to manage employees and view salary histories.
        </div>
    }
</div>
